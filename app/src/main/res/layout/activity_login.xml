<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/write">

    <com.baidu.ocr.demo.view.TitleBarView
        android:id="@+id/title_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/dp_20"
        android:paddingLeft="@dimen/dp_20">


        <LinearLayout
            android:id="@+id/layout_02"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_43"
            android:layout_marginTop="@dimen/dp_25"
            android:background="@drawable/bg_gray_slide"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15">

            <TextView
                android:layout_width="@dimen/dp_80"
                android:layout_height="wrap_content"
                android:text="账号"
                android:textColor="@color/black_low_1"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/tv_login_username"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/str_login_username_hint"
                android:singleLine="true"
                android:textColor="@color/black_low_5"
                android:textColorHint="@color/grey_low_2"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_03"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_43"
            android:layout_below="@+id/layout_02"
            android:layout_marginTop="@dimen/dp_25"
            android:background="@drawable/bg_gray_slide"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15">

            <TextView
                android:layout_width="@dimen/dp_80"
                android:layout_height="wrap_content"
                android:text="登录密码"
                android:textColor="@color/black_low_1"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/tv_login_pwd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/str_login_pwd_hint"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColor="@color/black_low_5"
                android:textColorHint="@color/grey_low_2"
                android:textSize="13sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_43"
            android:layout_below="@+id/layout_03"
            android:layout_marginTop="@dimen/dp_53"
            android:background="@drawable/select_login_ensure"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/write"
            android:textSize="14sp" />
    </RelativeLayout>
</RelativeLayout>
